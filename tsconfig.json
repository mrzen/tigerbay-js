{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "rootDir": "src/",
        "outDir": "build/",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strict": true
    },

    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts", "examples/**/*.ts"]
}