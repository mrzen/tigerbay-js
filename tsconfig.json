{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "rootDir": "src/",
        "outDir": "lib/",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": true,
        "sourceMap": true,
        "types": [
            "node"
        ],
        "declaration": true,
    },

    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts", "examples/**/*.ts"],

    "ts-node": {}
}